pipeline{
    agent any
    stages {
        stage('Clean-up'){
            steps{
                deleteDir()
            }
        }
        stage('Stage-A'){
            steps{
                echo "Test Build $BUILD_NUMBER > myFile.txt"
            }
            post{
                success {
                    echo "Stage A success"
                }
                failure {
                    sh "Stage A failure"
                }
            }
        }
        stage ("Stage B - figlet") {
            steps {
                echo "Executing Figlet"
                sh 'figlet -c Pipeline works with figlet'
            }
            post {
                failure{
                    sh "apt-get update && apt-get install figlet"
                }
            } 
        }
    }
}